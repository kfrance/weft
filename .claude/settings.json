{
		"sandbox": {
				"enabled": true,
				"autoAllowBashIfSandboxed": true,
				"excludedCommands": [
				"git:*",
				"docker:*",
				"linear issue create:*",
				"linear issue update:*",
				"linear issue delete:*",
				"linear issue start:*",
				"linear issue comment:*",
				"linear team create:*"
			],
				"network": {
						"allowLocalBinding": true
				}
		},
		"permissions": {
				"allow": [
						"WebSearch",
						"WebFetch(domain:files.pythonhosted.org)",
						"WebFetch(domain:pypi.org)",
						"WebFetch(domain:app.asana.com)",
						"Bash(uv run pytest:*)"
				],
				"deny": [
						"Read(./.env)"
				],
				"defaultMode": "acceptEdits",
				"webFetch": {
						"allow": ["*"]
				}
		}
}
