// Factory CLI Settings for lw_coder containerized droid sessions
// This file is used inside Docker containers for plan development
{
  "model": "gpt-5-codex",
  "reasoningEffort": "none",
  "cloudSessionSync": true,
  "diffMode": "github",
  "ideExtensionPromptedAt": {},
  "autonomyLevel": "high",
  "ideActivationNudgedForVersion": {},
  "enableCompletionBell": false,
  "commandAllowlist": [
    "ls",
    "pwd",
    "dir",
    "git",
    "cat",
    "grep",
    "find"
  ],
  "commandDenylist": [
    "rm -rf /",
    "rm -rf /*",
    "rm -rf .",
    "rm -rf ~",
    "rm -rf ~/*",
    "rm -rf $HOME",
    "rm -r /",
    "rm -r /*",
    "rm -r ~",
    "rm -r ~/*",
    "mkfs",
    "dd if=/dev/zero of=/dev",
    "dd of=/dev",
    "shutdown",
    "reboot",
    "halt",
    "poweroff",
    ":(){ :|: & };:",
    ":() { :|:& };:",
    "chmod -R 777 /",
    "chmod -R 000 /",
    "format"
  ],
  "enableCustomDroids": true,
  "includeCoAuthoredByDroid": true
}
